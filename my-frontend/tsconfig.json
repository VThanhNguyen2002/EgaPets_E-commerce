{
  "compilerOptions": {
    /* ------- cần cho React ---------- */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",              // ← quan trọng!
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,
    /* ------- alias & path ---------- */
    "baseUrl": "./src",
    "paths": {
      "@assets/*":     ["assets/*"],
      "@components/*": ["components/*"],
      "@context/*":    ["context/*"],
      "@hooks/*":      ["hooks/*"],
      "@layouts/*":    ["layouts/*"],
      "@pages/*":      ["pages/*"],
      "@routes/*":     ["routes/*"],
      "@services/*":   ["services/*"],
      "@store/*":      ["store/*"],
      "@types/*":      ["types/*"],
      "@utils/*":      ["utils/*"],
      "@/*":           ["*"]
    },
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
