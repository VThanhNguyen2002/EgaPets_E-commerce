{
  "version": 2,
  "buildCommand": "cd my-frontend && npm run build",
  "outputDirectory": "my-frontend/dist",
  "installCommand": "npm install --prefix my-backend && npm install --prefix my-frontend",
  "functions": {
    "api/[...path].js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}